{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "functions": {
    "app/api/products/route.ts": {
      "maxDuration": 30
    },
    "app/api/orders/route.ts": {
      "maxDuration": 30
    },
    "app/api/contact/route.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=86400"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
